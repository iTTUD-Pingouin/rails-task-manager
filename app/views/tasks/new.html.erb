<div class="container">

  <h2>Create a new task</h2>

  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :details %>
    <%= f.text_field :details %>

    <%= f.submit %>
  <% end %>


  <p>---------------</p>

  <%= link_to "Back to all tasks", "/tasks"%>

</div>

