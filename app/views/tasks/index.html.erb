<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1>All tasks</h1>
      <ul class="list-unstyled">
        <% @tasks.each do |task| %>
          <li>
            <% if task.completed == true %>
              <%= image_tag("check.svg", size: "16x10") %>
            <% else %>
              <%= image_tag("check copie.svg", size: "16x10") %>
            <% end %>
            -
            <%= link_to task.title, "/task/#{task.id}" %>
            -
            <%= link_to task_destroy_path(task), method: :delete do %>
                <i class="fas fa-times"></i>
              <% end %>
         </li>
        <% end %>
      </ul>
    </div>
  </div>








